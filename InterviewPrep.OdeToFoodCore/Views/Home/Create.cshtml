@model InterviewPrep.OdeToFoodCore.Entities.Restaurant
@{
    ViewBag.Title = "Create New";
}
<h1>Create New Restaurant</h1>
@using (Html.BeginForm())
{
    <div>
        @Html.LabelFor(m => m.Name)
        @Html.EditorFor(m => m.Name)
        @*@Html.ValidationMessageFor(m => m.Name)*@
    </div>
    <div>
        @Html.LabelFor(m => m.Cuisine)
        @Html.DropDownListFor(m => m.Cuisine, Html.GetEnumSelectList<CuisineType>())
        @*@Html.ValidationMessageFor(m => m.Cuisine)*@
    </div>
    <div>
        <input type="submit" value="Save" />
        @Html.ValidationSummary()
    </div>
}